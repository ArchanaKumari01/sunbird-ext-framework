{
  "type": "elasticsearch",
  "indexes": [
    {
      "name": "profile",
      "mappings": {
        "doc": {
          "properties": {
            "user_id": {
              "type": "text"
            },
            "first_name": {
              "type": "text"
            },
            "last_name": {
              "type": "text"
            }
          }
        }
      },
      "settings": {
        "index": {
          "number_of_shards": 1,
          "number_of_replicas": 0
        }
      }
    },
    {
      "name": "profile2",
      "mappings": {
